<div xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="api.community_layout.macros['master']">


  <span metal:fill-slot="extra-headers" tal:omit-tag="">
    <link rel="alternate" type="application/atom+xml" 
	  title="${calendar.title}" href="${calendar.feed_href}"
	  />
  </span>

  <div metal:fill-slot="content">

    <div metal:use-macro="calendar.navigation.macros['header']"/>

    <h3 class="cal_title">${calendar.title}</h3>        

    <table class="cal cal_agenda">
      <tr tal:repeat="day calendar.days" class="cal_agenda_day ${day.shade_class}">
        <th><a href="${day.show_day_url}">${day.day_in_words}</a></th>

        <td>
          <div tal:repeat="event day.events" class="cal_agenda_block clearafter">
            <div class="cal_event_time cal_event_pos_full">
              <a href="${event.show_url}" class="cal_blue">${event.time_in_words}</a>
            </div>

            <div class="cal_agenda_title">
              <a href="${event.show_url}" class="cal_blue">${event.title}</a>

	            <tal:block condition="event.location">
              - ${event.location}
              </tal:block>
            </div>
          </div>
        </td>
      </tr>

      <tr class="cal_agenda_range">
        <td colspan="2"><a href="${calendar.navigation.next_href}">View more events</a></td>
      </tr>      
    </table>

    <div metal:use-macro="calendar.navigation.macros['footer']"/>

  </div>


</div>
