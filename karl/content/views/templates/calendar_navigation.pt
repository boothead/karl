<div xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal">

      <div class="cal_header" metal:define-macro="header">
        <div class="cal_calendars clearafter" >
          <div class="cal_choose">
            <label for="">
              Layer: 
            </label>
            <select id="cal_picker">
              <option 
                      tal:attributes="value api.request.path_url + '?filter=';
                                      class 'group'" 
                      >All layers</option>
              <option 
                      tal:repeat="layer layers"
                      tal:attributes="value api.request.path_url + '?filter=' + layer.__name__; 
                                      class 'color cal_' +layer.color;
                                      selected layer.__name__ == selected_layer"
                      >${layer.title}</option>
            </select>                       
            
            <tal:block condition="setup_url"> 
              (<a href="${setup_url}">Setup</a>)
            </tal:block>
          </div>

          <!-- new event -->
          <div class="cal_new_event">
            <a href="${calendar.add_event_url}">Add Event</a>    
          </div>
        </div>

        <!-- buttons -->
        <div class="cal_buttons clearafter">
          <div class="cal_nav">
            <a href="${calendar.navigation.today_url}"><img src="${api.static_url}/images/cal_buttons_${calendar.navigation.today_button_img}" /></a>&nbsp;
            <a href="${calendar.navigation.prev_url}"><img src="${api.static_url}/images/cal_buttons_previous.png" /></a><a href="${calendar.navigation.next_url}"><img src="${api.static_url}/images/cal_buttons_next.png" /></a>
          </div>

          <div class="cal_scope">
            <a href="${calendar.navigation.day_button_url}"><img src="${api.static_url}/images/cal_buttons_${calendar.navigation.day_button_img}" /></a><a href="${calendar.navigation.week_button_url}"><img src="${api.static_url}/images/cal_buttons_${calendar.navigation.week_button_img}" /></a><a href="${calendar.navigation.month_button_url}"><img src="${api.static_url}/images/cal_buttons_${calendar.navigation.month_button_img}" /></a><a href="${calendar.navigation.list_button_url}"><img src="${api.static_url}/images/cal_buttons_${calendar.navigation.list_button_img}" /></a>
          </div>
        </div>
      </div>

      <div class="cal_footer clearafter" metal:define-macro="footer">
        <!-- actions -->
        <div class="cal_actions">
           <!-- <a class="cal_download" href="#">Download</a> -->
           <a class="cal_subscribe" href="${calendar.feed_url}">Subscribe</a>
        </div>
      </div>

</div>

